<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 row justify-content-between mx-auto">
      <form action="/restaurants/search" class="col-5" method="GET">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      
      <form action="/restaurants/filter" method="POST">
        <div class="form-group d-flex justify-content-center">
          <label for="filterCategory"></label>
          <select name="filterCategory" id="filterCategory" class="form-control" onchange="this.form.submit()">
            <option value="請選擇類別">請選擇類別</option>
            <option value="A-Z">A-Z</option>
            <option value="Z-A">Z-A</option>
            <option value="category">類別</option>
            <option value="location">地點</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer d-flex justify-content-end" >
              <a class="btn btn-info btn-sm ml-2" href="/restaurants/{{ this._id }}/edit" role="button">Edit</a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm ml-1">Delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="container mt-2">
  <div class="ml-3 d-flex justify-content-center">
    <a class="btn btn-secondary" href="/restaurants/new" role="button">新增餐廳</a>
  </div>
</div>
